citHeader("To cite rmacrostrat in publications, use the following citation:")

bibentry(bibtype = "Article",
         title = "rmacrostrat: An R Package for fetching geologic data from the Macrostrat database.",
         author = c(as.person("Lewis A. Jones"),
                    as.person("Christopher D. Dean"),
                    as.person("William Gearty"),
                    as.person("Bethany J. Allen")),
         year = "2024",
         journal = "Geosphere",
         doi = "10.1130/GES02815.1",
         textVersion = paste("Jones, L.A., Dean, C.D., Gearty, W., and Allen, B.J. 2024.",
         "rmacrostrat: An R package for accessing and retrieving data from the Macrostrat geological database.",
         "Geosphere",
         "doi: 10.1130/GES02815.1")
)
